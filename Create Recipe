import Recipe.java;
import Ingredient.java;
import javax.swing.JFrame;
import javax.swing.JTextField;
import javax.swing.JPanel;
import java.awt.Dimension;

static void CreateRecipe() {
    JFrame title = new JFrame("enter the title of the recipe");
    title.setDefaultCloseOperation(title.EXIT_ON_CLOSE);
    JTextField textFieldTitle = new JTextField(20); 
    textFieldTitle.setPreferredSize(new Dimension(250, 40));
    JPanel panelTitle = new JPanel();
    panelTitle.add(textFieldTitle);
    title.getContentPane().add(panelTitle);
    title.pack();
    title.setVisible(true);

    JFrame description = new JFrame("enter the description of the recipe");
    description.setDefaultCloseOperation(description.EXIT_ON_CLOSE);
    JTextField textFieldDescription = new JTextField(20); 
    textFieldDescription.setPreferredSize(new Dimension(250, 40));
    JPanel panelDescription = new JPanel();
    panelDescription.add(textFieldDescription);
    description.getContentPane().add(panelDescription);
    description.pack();
    description.setVisible(true);

    // All the stuff about uploading an at
    //image and displaying it goes here I 
    //don't know how to do that


    JFrame units = new JFrame("units");
    JFrame amount = new JFrame("amount");
    JFrame ingredient = new JFrame("name of ingredient");
    
    units.setDefaultCloseOperation(units.EXIT_ON_CLOSE);
    amount.setDefaultCloseOperation(amount.EXIT_ON_CLOSE);
    ingredient.setDefaultCloseOperation(ingredient.EXIT_ON_CLOSE);

    JTextField textFieldUnits = new JTextField(20); 
    JTextField textFieldAmount = new JTextField(20); 
    JTextField textFieldIngredient = new JTextField(20); 

    textFieldUnits.setPreferredSize(new Dimension(250, 40));
    textFieldAmount.setPreferredSize(new Dimension(250, 40));
    textFieldIngredient.setPreferredSize(new Dimension(250, 40));

    JPanel panelUnits = new JPanel();
    JPanel panelAmount = new JPanel();
    JPanel panelIngredient = new JPanel();

    panelUnits.add(textFieldUnits);
    panelAmount.add(textFieldAmount);
    panelIngredient.add(textFieldIngredient);

    units.getContentPane().add(panelUnits);
    amount.getContentPane().add(panelAmount);
    ingredient.getContentPane().add(panelIngredient);

    units.pack();
    amount.pack();
    ingredient.pack();

    units.setVisible(true);
    amount.setVisible(true);
    ingredient.setVisible(true);

    

}
